{
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "overrides": [
    {
      "files": "*.riot",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.svg",
      "options": {
        "parser": "html"
      }
    }
  ],
  "plugins": ["prettier-plugin-css-order"],
  "cssDeclarationSorterOrder": "alphabetical"
}
