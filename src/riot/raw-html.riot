<raw-html>
  <span data-ref="content"></span>

  <script>
    import anime from 'animejs'

    export default {
      setContent() {
        this.$('[data-ref="content"]').innerHTML = String(this.props.content)
      },
      onMounted() {
        this.setContent()
      },
      onUpdated() {
        this.setContent()
      },
    }
  </script>
</raw-html>