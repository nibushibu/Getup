{
  "name": "getup",
  "version": "2.2.7",
  "description": "Frontend boilerplate",
  "author": "Genki Katsutani",
  "scripts": {
    "start": "run-s riot html js watch",
    "watch": "run-p css watch:* server",
    "css": "postcss src/css/main.css --config postcss.config.js --output dist/css/main.css --map",
    "html": "node node_scripts/html.js",
    "riot": "riot src/riot --output src/js/components --sourcemap inline",
    "riot-js": "run-s riot js",
    "js": "npx esbuild src/js/main.js --bundle --sourcemap --minify --outfile=.temp/main.bundled.js",
    "babel": "babel .temp/main.bundled.js --out-file dist/js/main.js --source-maps",
    "watch:html": "onchange src/html -- npm run html",
    "watch:css": "onchange src/css -- npm run css",
    "watch:js": "onchange 'src/js/*.js' -- npm run js",
    "watch:riot": "onchange 'src/riot/**/*' -- npm run riot-js",
    "watch:babel": "onchange '.temp/**/*.js' -- npm run babel",
    "build:js": "run-s riot js babel",
    "build:css": "postcss src/css/main.css --config postcss.config.js --output dist/css/main.css --no-map",
    "build": "run-p build:js build:css html",
    "server": "node node_scripts/serve.js"
  },
  "dependencies": {
    "animejs": "^3.2.1",
    "riot": "^5.3.0",
    "sanitize.css": "^12.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nibushibu/Getup.git"
  },
  "bugs": {
    "url": "https://github.com/nibushibu/Getup/issues"
  },
  "homepage": "https://github.com/nibushibu/Getup",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@riotjs/cli": "^5.1.4",
    "@riotjs/compiler": "^5.2.1",
    "@riotjs/ssr": "^6.0.0",
    "@webcomponents/template": "^1.4.4",
    "core-js": "^3.8.3",
    "esbuild": "^0.8.46",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "postcss-csso": "^5.0.0",
    "postcss-custom-properties": "^11.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-focus": "^5.0.1",
    "postcss-import": "^14.0.0",
    "postcss-normalize-charset": "^4.0.1",
    "postcss-preset-env": "^6.7.0",
    "uglify-js": "^3.12.8"
  }
}
