{
  "name": "getup",
  "version": "8.5.4",
  "description": "Frontend boilerplate",
  "author": "Genki Katsutani",
  "scripts": {
    "html": "node node_scripts/html.js",
    "server": "node node_scripts/serve.js",
    "start": "run-s html watch",
    "build": "run-s html riot-build",
    "riot": "riot src/riot --output dist/js --sourcemap file --extension html",
    "riot-build": "riot src/riot --output dist/js --extension html",
    "watch:html": "onchange 'src/html' -- npm run html",
    "watch:riot": "riot src/riot --output dist/js --sourcemap file --extension html --watch",
    "watch": "run-p watch:* server"
  },
  "dependencies": {
    "@fontsource/noto-sans-jp": "^5.0.3",
    "animejs": "^3.2.1",
    "open-props": "^1.5.8",
    "riot": "^7.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nibushibu/Getup.git"
  },
  "bugs": {
    "url": "https://github.com/nibushibu/Getup/issues"
  },
  "homepage": "https://github.com/nibushibu/Getup",
  "license": "MIT",
  "devDependencies": {
    "@riotjs/cli": "^6.1.0",
    "@riotjs/register": "^6.0.1",
    "@riotjs/ssr": "^8.1.2",
    "dotenv": "^16.1.4",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "express": "^4.18.2",
    "glob": "^10.2.7",
    "markuplint": "^3.10.0",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.8.8",
    "prettier-plugin-css-order": "^1.3.1"
  }
}
