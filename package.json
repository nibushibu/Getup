{
  "name": "getup",
  "version": "0.5.0",
  "description": "Frontend boilerplate",
  "author": "Genki Katsutani",
  "config": {
    "distDir": "dist"
  },
  "scripts": {
    "css-sass": "node-sass --output ${npm_package_config_distDir}/css --output-style expanded --source-map true --source-map-contents true --include-path src/css --precision 6 'src/scss'",
    "css-postcss": "postcss --config postcss.config.js --replace ${npm_package_config_distDir}/css/**/*.css",
    "css-postcss-guide": "postcss --config postcss.config.js -e guide --replace ${npm_package_config_distDir}/css/**/*.css",
    "css": "npm-run-all css-sass css-postcss",
    "styleguide": "npm-run-all css-sass css-postcss-guide",
    "buble": "buble -i src/js -m -o ${npm_package_config_distDir}/js",
    "watch-riot": "npm-run-all --parallel riot",
    "watch-js": "onchange src/js -- npm run buble",
    "watch-scss": "onchange src/scss -- npm run css",
    "watch-html": "onchange src/ejs -- gulp html",
    "watch": "npm-run-all --parallel watch-*",
    "riot": "riot -w --config riot.config",
    "min-css": "postcss ${npm_package_config_distDir}/css/main.css -e minify -o ${npm_package_config_distDir}/css/main.css",
    "min-image": "imagemin ${npm_package_config_distDir}/img/*.{jpg,png} --out-dir=${npm_package_config_distDir}/img",
    "min-js": "uglifyjs dist/js/main.js",
    "min": "npm-run-all --parallel min-*",
    "x-copy-font": "cpx \"node_modules/slick-carousel/slick/fonts/**\" ${npm_package_config_distDir}/css/fonts",
    "x-copy-img": "cpx \"node_modules/slick-carousel/slick/ajax-loader.gif\" ${npm_package_config_distDir}/css",
    "copy-gulp": "gulp copy",
    "copy": "npm-run-all --parallel copy-*"
  },
  "dependencies": {
    "feature.js": "^1.0.0",
    "flexibility": "^2.0.1",
    "gulp-ejs": "^3.1.2",
    "gulp-notify": "^3.2.0",
    "jquery": "^3.2.1",
    "mo-js": "^0.288.2",
    "mobile-detect": "^1.3.6",
    "p5": "^0.6.1",
    "popper.js": "^1.12.5",
    "promise-polyfill": "^8.0.0",
    "riot": "^3.10.3",
    "sanitize.css": "^6.0.0",
    "scrollmagic": "^2.0.5",
    "slick-carousel": "^1.7.1",
    "whatwg-fetch": "^2.0.3"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nibushibu/Getup.git"
  },
  "bugs": {
    "url": "https://github.com/nibushibu/Getup/issues"
  },
  "homepage": "https://github.com/nibushibu/Getup",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015-riot": "^1.1.0",
    "buble": "^0.19.3",
    "concat": "^1.0.3",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.0",
    "cssnano": "^4.0.1",
    "eslint": "^5.1.0",
    "eslint-config-riot": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-consolidate": "^0.2.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.3",
    "gulp-uglify": "^3.0.0",
    "lodash": "^4.17.4",
    "node-sass": "^4.9.2",
    "onchange": "^4.0.0",
    "perfectionist": "^2.4.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-devtools": "^1.1.1",
    "postcss-easings": "^1.0.0",
    "postcss-focus": "^3.0.0",
    "postcss-import": "^11.1.0",
    "postcss-style-guide": "^0.14.0",
    "pump": "^3.0.0",
    "require-dir": "^1.0.0",
    "run-sequence": "^2.1.0",
    "uglify-js": "^3.4.4"
  }
}
