{
  "name": "getup",
  "version": "6.3.2",
  "description": "Frontend boilerplate",
  "author": "Genki Katsutani",
  "scripts": {
    "babel-build": "babel .temp/main.bundled.js --out-file dist/js/main.js",
    "babel": "babel .temp/main.bundled.js --out-file dist/js/main.js --source-maps",
    "build-babel": "run-s html css-build riot js-babel babel-build uglifyjs",
    "build": "run-s html css-build riot js-build",
    "css-build": "postcss src/css/main.css --env production --config postcss.config.js --output dist/css/main.css --no-map",
    "css-develop": "postcss src/css/main.css --config postcss.config.js --output dist/css/main.css --map",
    "css": "npm run css-develop",
    "html": "node node_scripts/html.js",
    "js-babel": "esbuild src/js/main.js --bundle --sourcemap --outfile=.temp/main.bundled.js",
    "js-build": "esbuild src/js/main.js --bundle --minify --outfile=dist/js/main.js",
    "js": "esbuild src/js/main.js --bundle --sourcemap --outfile=dist/js/main.js",
    "riot-js-with-babel": "run-s riot js-babel babel",
    "riot-js": "run-s riot js",
    "riot-single": "riot --output src/js/components --sourcemap inline --extension html",
    "riot": "riot src/riot --output src/js/components/src/riot --sourcemap inline --extension html",
    "server": "node node_scripts/serve.js",
    "start-babel": "run-s html css riot-js-with-babel watch-with-babel",
    "start": "run-s html css riot-js watch",
    "uglifyjs": "uglifyjs dist/js/main.js --output dist/js/main.js",
    "watch-babel": "onchange '.temp/**/*.js' -- npm run babel",
    "watch-js-with-babel": "onchange 'src/js/**/*.js' -- npm run js-babel",
    "watch-with-babel": "run-p watch:html watch:css watch:riot watch:img watch-js-with-babel watch-babel server",
    "watch:css": "onchange src/css -- npm run css",
    "watch:img": "onchange 'dist/img/**/*.png' -- npm run webp-single -- {{file}}",
    "watch:html": "onchange 'src/html' -- npm run html",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run js",
    "watch:riot": "onchange 'src/riot/**/*' -- npm run riot-single -- {{file}}",
    "watch": "run-p watch:* server",
    "webp": "imagemin 'dist/img/*.(png|jpg|jpeg)' --plugin.webp.quality=95 --out-dir=dist/img",
    "webp-single": "imagemin --plugin.webp.quality=95 --out-dir=dist/img"
  },
  "dependencies": {
    "@fontsource/noto-sans-jp": "^4.5.3",
    "animejs": "^3.2.1",
    "riot": "^6.1.2",
    "sanitize.css": "^12.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nibushibu/Getup.git"
  },
  "bugs": {
    "url": "https://github.com/nibushibu/Getup/issues"
  },
  "homepage": "https://github.com/nibushibu/Getup",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.4",
    "@babel/preset-env": "^7.16.11",
    "@riotjs/cli": "^6.0.5",
    "@riotjs/compiler": "^6.1.3",
    "@riotjs/ssr": "^7.1.1",
    "@webcomponents/template": "^1.5.0",
    "core-js": "^2.6.12",
    "esbuild": "^0.14.22",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "express": "^4.17.3",
    "glob": "^7.2.0",
    "imagemin-cli": "^7.0.0",
    "imagemin-webp": "^7.0.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-csso": "^6.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-focus": "^5.0.1",
    "postcss-import": "^14.0.2",
    "postcss-normalize-charset": "^5.0.3",
    "postcss-preset-env": "^7.4.1",
    "prettier": "^2.5.1",
    "prettier-plugin-css-order": "^1.1.0",
    "uglify-js": "^3.15.1"
  }
}
