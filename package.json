{
  "name": "getup",
  "version": "2.5.0",
  "description": "Frontend boilerplate",
  "author": "Genki Katsutani",
  "scripts": {
    "start": "run-s html css riot-js watch",
    "start-babel": "run-s html css riot-js--babel watch--babel",
    "watch": "run-p watch:* server",
    "watch--babel": "run-p watch:html watch:css watch:riot watch-js--babel server",
    "css": "npx postcss src/css/main.css --config postcss.config.js --output dist/css/main.css --map",
    "css-build": "npx postcss src/css/main.css --env production --config postcss.config.js --output dist/css/main.css --no-map",
    "html": "node node_scripts/html.js",
    "riot": "npx riot src/riot --output src/js/components/src/riot --sourcemap inline",
    "riot-single": "npx riot --output src/js/components --sourcemap inline",
    "riot-js": "run-s riot js",
    "riot-js--babel": "run-s riot js--babel babel",
    "js": "npx esbuild src/js/main.js --bundle --sourcemap --outfile=dist/js/main.js",
    "js-build": "npx esbuild src/js/main.js --bundle --minify --outfile=dist/js/main.js",
    "js--babel": "npx esbuild src/js/main.js --bundle --sourcemap --outfile=.temp/main.bundled.js",
    "babel": "npx babel .temp/main.bundled.js --out-file dist/js/main.js --source-maps",
    "babel-build": "npx babel .temp/main.bundled.js --out-file dist/js/main.js",
    "watch:html": "npx onchange src/html -- npm run html",
    "watch:css": "npx onchange src/css -- npm run css",
    "watch:riot": "npx onchange 'src/riot/**/*' -- npm run riot-single -- {{file}}",
    "watch:js": "npx onchange 'src/js/**/*.js' -- npm run js",
    "watch-js--babel": "npx onchange 'src/js/*.js' -- npm run js--babel",
    "watch-babel": "npx onchange '.temp/**/*.js' -- npm run babel",
    "build": "run-s html css-build riot js-build",
    "build-babel": "run-s html css-build riot js--babel babel-build uglifyjs",
    "uglifyjs": "npx uglifyjs dist/js/main.js --output dist/js/main.js",
    "server": "node node_scripts/serve.js"
  },
  "dependencies": {
    "animejs": "^3.2.1",
    "riot": "6.0.1",
    "sanitize.css": "^12.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nibushibu/Getup.git"
  },
  "bugs": {
    "url": "https://github.com/nibushibu/Getup/issues"
  },
  "homepage": "https://github.com/nibushibu/Getup",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@riotjs/cli": "^6.0.5",
    "@riotjs/compiler": "^6.0.1",
    "@riotjs/ssr": "^7.0.0",
    "@webcomponents/template": "^1.4.4",
    "core-js": "^3.15.2",
    "esbuild": "^0.12.15",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-csso": "^5.0.1",
    "postcss-custom-properties": "^11.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-focus": "^5.0.1",
    "postcss-import": "^14.0.2",
    "postcss-normalize-charset": "^5.0.1",
    "postcss-preset-env": "^6.7.0",
    "uglify-js": "^3.13.10"
  }
}
