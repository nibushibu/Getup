{
  "name": "getup",
  "version": "8.5.4",
  "description": "Frontend boilerplate",
  "author": "nibushibu",
  "type": "module",
  "scripts": {
    "build": "run-s html riot-build",
    "html-format": "prettier --write 'dist/**/*.html'",
    "html-from-riot": "node --trace-warnings --loader @riotjs/register node_scripts/html.js",
    "html": "run-s html-from-riot html-format",
    "preview": "npx http-server dist -o / -c-1",
    "riot-build": "riot src/riot --output dist/js --extension html",
    "riot": "riot src/riot --output dist/js --sourcemap file --extension html",
    "start": "run-s html watch",
    "watch:html": "onchange 'src/html' -- npm run html",
    "watch:riot": "riot src/riot --output dist/js --sourcemap file --extension html --watch",
    "watch": "run-p watch:* preview"
  },
  "dependencies": {
    "@fontsource/noto-sans-jp": "^5.0.10",
    "animejs": "^3.2.1",
    "open-props": "^1.5.15",
    "riot": "^9.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nibushibu/Getup.git"
  },
  "bugs": {
    "url": "https://github.com/nibushibu/Getup/issues"
  },
  "homepage": "https://github.com/nibushibu/Getup",
  "license": "MIT",
  "devDependencies": {
    "@riotjs/cli": "^9.0.5",
    "@riotjs/register": "^9.0.0",
    "@riotjs/ssr": "^9.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "glob": "^10.3.4",
    "markuplint": "^3.12.0",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-css-order": "^2.0.0"
  }
}
