{
  "name": "getup",
  "version": "9.0.0",
  "description": "Frontend boilerplate",
  "author": "nibushibu",
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s html css-build js-build",
    "css-build": "postcss src/css/main.css --env production --config postcss.config.js --output dist/css/main.css --no-map",
    "css-develop": "postcss src/css/main.css --config postcss.config.js --output dist/css/main.css --map",
    "css": "npm run css-develop",
    "html-format": "prettier 'dist/**/*.html' --write --ignore-gitignore",
    "html-from-riot": "node --loader @riotjs/register node_scripts/html.mjs",
    "html": "run-s html-from-riot html-format",
    "js-build": "esbuild src/js/main.js --bundle --minify --outfile=dist/js/main.js",
    "js": "esbuild src/js/main.js --bundle --sourcemap --outfile=dist/js/main.js",
    "preview": "npx http-server dist -o / -c-1",
    "riot-single": "riot --output src/js/components --sourcemap file --extension html",
    "riot": "riot src/riot --output src/js/components --sourcemap file",
    "ready": "run-p html js css",
    "start": "run-s ready watch",
    "watch:css": "onchange src/css -- npm run css",
    "watch:html": "onchange 'src/html' -- npm run html",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run js",
    "watch:riot": "riot src/riot --output dist/js --sourcemap file --extension html --watch",
    "watch": "run-p watch:* preview"
  },
  "dependencies": {
    "@fontsource/noto-sans-jp": "^5.0.10",
    "animejs": "^3.2.1",
    "open-props": "^1.5.15",
    "riot": "^9.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nibushibu/Getup.git"
  },
  "bugs": {
    "url": "https://github.com/nibushibu/Getup/issues"
  },
  "homepage": "https://github.com/nibushibu/Getup",
  "license": "MIT",
  "devDependencies": {
    "@riotjs/cli": "^9.0.5",
    "@riotjs/register": "^9.0.0",
    "@riotjs/ssr": "^9.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "glob": "^10.3.4",
    "markuplint": "^3.12.0",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.29",
    "postcss-cli": "^10.1.0",
    "postcss-csso": "^6.0.1",
    "postcss-custom-media": "^10.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^15.1.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-normalize-charset": "^6.0.0",
    "postcss-preset-env": "^9.1.3",
    "prettier": "^3.0.3",
    "prettier-plugin-css-order": "^2.0.0"
  }
}
