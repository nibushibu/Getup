{
  "name": "getup",
  "version": "10.1.3",
  "description": "Frontend boilerplate",
  "author": "nibushibu",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s html css-build js-build",
    "css-build": "postcss src/css/main.css --env production --config postcss.config.js --output public/css/main.css --no-map",
    "css-develop": "postcss src/css/main.css --config postcss.config.js --output public/css/main.css --map",
    "css": "npm run css-develop",
    "dev": "npm run start",
    "html-format": "prettier 'public/**/*.html' --ignore-path --write",
    "html-from-riot": "RIOT_COMPONENTS_FILE_EXTENSION=.html node --loader @riotjs/register scripts/html.mjs",
    "html": "run-s html-from-riot html-format html-lint",
    "html-lint": "markuplint \"public/**/*.html\"",
    "js-build": "esbuild src/js/main.js --bundle --minify --outfile=public/js/main.js",
    "js": "esbuild src/js/main.js --bundle --sourcemap --outfile=public/js/main.js",
    "preview": "npx http-server public -o / -d false --silent",
    "riot-single": "riot --output src/js/components --sourcemap file -e html",
    "riot": "riot src/riot --output src/js/components --sourcemap file -e html",
    "riot-lint": "markuplint \"src/riot/**/*.html\"",
    "ready": "run-s html riot riot-lint js css",
    "start": "run-s ready watch",
    "watch:css": "onchange src/css -- npm run css",
    "watch:html": "onchange 'src/html' -- npm run html",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run js",
    "watch:riot": "riot src/riot --output src/js/components --sourcemap file --watch --extension html",
    "watch:riot-lint": "onchange 'src/riot' -- npm run riot-lint",
    "watch": "run-p watch:* preview",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "dependencies": {
    "@fontsource/noto-sans-jp": "^5.1.0",
    "@riotjs/custom-elements": "^9.0.0",
    "open-props": "^1.7.7",
    "riot": "^9.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nibushibu/Getup.git"
  },
  "bugs": {
    "url": "https://github.com/nibushibu/Getup/issues"
  },
  "homepage": "https://github.com/nibushibu/Getup",
  "license": "MIT",
  "devDependencies": {
    "@riotjs/cli": "^9.0.5",
    "@riotjs/register": "^9.1.0",
    "@riotjs/ssr": "^9.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "cssnano-preset-lite": "^4.0.3",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^11.0.0",
    "markuplint": "^4.10.1",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-custom-media": "^11.0.4",
    "postcss-import": "^16.1.0",
    "postcss-normalize-charset": "^7.0.0",
    "postcss-preset-env": "^10.0.8",
    "prettier": "^3.3.3",
    "prettier-plugin-css-order": "^2.1.2"
  }
}
